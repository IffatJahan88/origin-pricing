{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES6",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noImplicitAny": false,
    "types": [
      "node"
    ]
  },
  "include": ["src/**/*.ts", "features/*.feature"]
}
